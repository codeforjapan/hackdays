{
  "editor.formatOnSave": true, // Enable auto format
  "editor.formatOnPaste": true, // Enable auto formatting on pasting
  "editor.formatOnType": true, // Enable auto formatting on typing
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Use prettier for default formatter
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true // Use ESLint on save
  },
  "jest.jestCommandLine": "yarn test:ci", // setting for vscode-jest plugin
  "jest.autoRun": { "watch": true }
}
